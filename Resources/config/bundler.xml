<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="symfony_bundler.cache.class">Etcpasswd\SymfonyBundlerBundle\Cache\FileCache</parameter>
        <parameter key="symfony_bundler.cache.path">%kernel.root_dir%/cache/bundler</parameter>
    </parameters>
    <services>
        <service id="symfony_bundler.cache" class="%symfony_bundler.cache.class%">
            <argument type="string">%symfony_bundler.cache.path%</argument>
        </service>
    
        <service id="symfony_bundler.discoveryservice" class="Etcpasswd\SymfonyBundlerBundle\Services\DiscoveryService">
            <argument type="service" id="symfony_bundler.cache" />
        </service>
    </services>
</container>
